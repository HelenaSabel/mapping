        <L AC="---+-----+" ERI="fazer" N="2" NS="10" RI="er">
          <LT>todos devian gran doo <SEG C="R" ID="1" N="PRI">fazer</SEG></LT>

          <LL>todos devian gran doo fazer</LL>
        </L>

        <L AC="---+-----+" ERI="prazer" N="3" NS="10" RI="er">
          <LT>e non tomar en si nen un prazer,</LT>

          <LL>e non tomar en si nen un prazer,</LL>
        </L>

        <L AC="----+----+" ERI="senhor" N="4" NS="10" RI="or">
          <LT><SEG C="R" ID="2" N="CPL">porque perderon tan boo senhor</SEG></LT>

          <LL>porque perderon tan boo senhor</LL>
        </L>

        <L AC="--+------+" ERI="Portugal" N="5" NS="10" RI="al">
          <LT>co<SEG C="M" ID="3" N="SIN">me el</SEG> rei don Denis de
          Portugal,</LT>

          <LL>come el rei don Denis de Portugal,</LL>

          <ANTRO T="REAL">Rei dom Denis de Portugal</ANTRO>
        </L>

        <L AC="---+-----+" ERI="mal" N="6" NS="10" RI="al">
          <LT><SEG C="R" ID="4" N="CD">de que</SEG> non pode dizer nen un mal</LT>

          <LL>de que non pode dizer nen un mal</LL>
        </L>

        <L AC="----+----+" ERI="posfaçador" N="7" NS="10" RI="or">
          <LT>homen, pero seja posfaçador.</LT>

          <LL>homen, pero seja posfaçador.</LL>
        </L>
      </BODY>
