      <EDIANT T="CRITI">
        <P>Juárez, pp. 226-227</P>
      </EDIANT>

      <EDIANT T="CRITI">
        <P>Fdez. Pousa, Pero da Ponte, 38</P>
      </EDIANT>

      <EDIANT T="CRITI">
