          </NOTNESQ></NUMESQ>
      </CABGRU>

      <BODY>
        <L AC="---+---+/--+----+" ERI="amar" N="1" NS="16" RI="ar">
          <LT><SEG C="R" ID="1" N="CP">E, <SEG C="R" ID="2" N="CD">pois</SEG> <SEG
                C="R" ID="5" N="CF">dizedes</SEG> ca poder<SEG C="M" ID="6"
                N="CAE"></SEG>non avedes d' al tant' amar</SEG></LT>

          <LL>E, pois dizedes ca poder non avedes d' al tant' amar</LL>
        </L>

        <L AC="--+---+-/-+--+--+" ERI="ampar" N="2" NS="16" RI="ar">
          <LT><SEG C="R" ID="1" N="CP"><SEG C="R" ID="7" N="CD">come min</SEG>, ai meu amigo,<SEG
                C="M" ID="8" N="CAE"></SEG> <SEG C="R" ID="9" N="CF">dizede</SEG>, se Deus vos ampar</SEG>,</LT>

          <LL>come min, ai meu amigo, dizede, se Deus vos ampar,</LL>
        </L>

        <REFRAN>
          <L AC="--+-+--+/+---+--+" ERI="daquen" N="3" NS="16" RI="en">
            <LT>se mi vós queredes <SEG C="I" ID="10" N="RE">gran ben,<SEG
                  C="M" ID="10a" N="CAE"></SEG> como podedes ir daquen</SEG>?</LT>

            <LL>se mi vós queredes gran ben, como podedes ir daquen?</LL>
          </L>
        </REFRAN>
      </BODY>
    </GRUPO>

    <GRUPO NUM="3" TIPO="ESTROFA">
      <CABGRU NUTOTVER="2+1">
        <ESQRIM TIPO="aaB"></ESQRIM>

        <INFMET>
          <ESQMET>16 16 16</ESQMET>
        </INFMET>

        <NUMESQ>26:1 <NOTNESQ>
